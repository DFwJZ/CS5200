<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <h2>Editing Appointment ID: <%= appointment.appointment_id %></h2>

    <!-- Edit Appointment Form -->
    <form
      action="/update_appointment/<%= appointment.appointment_id %>"
      method="POST"
    >
      <!-- Patient Details -->
      <h3>Patient Details:</h3>
      <p>Patient ID: <%= appointment.patient?.PatientID %></p>
      <label for="patientName">Name:</label>
      <input
        type="text"
        id="patientName"
        name="patientName"
        value="<%= appointment.patient?.Name %>"
      /><br />

      <label for="patientDOB">Date of Birth:</label>
      <input
        type="date"
        id="patientDOB"
        name="patientDOB"
        value="<%= appointment.patient?.DateOfBirth %>"
      /><br />

      <label for="patientAddress">Address:</label>
      <input
        type="text"
        id="patientAddress"
        name="patientAddress"
        value="<%= appointment.patient?.Address %>"
      /><br />

      <label for="patientInsuranceID">Insurance ID:</label>
      <input
        type="text"
        id="patientInsuranceID"
        name="patientInsuranceID"
        value="<%= appointment.patient?.InsuranceID %>"
      /><br />

      <!-- Doctor Details -->
      <h3>Doctor Details:</h3>
      <label for="doctorName">Name:</label>
      <input
        type="text"
        id="doctorName"
        name="doctorName"
        value="<%= appointment.doctor?.Name %>"
      /><br />

      <label for="doctorSchedule">Schedule:</label>
      <input
        type="text"
        id="doctorSchedule"
        name="doctorSchedule"
        value="<%= appointment.doctor?.Schedule %>"
      /><br />

      <label for="doctorPrimaryCare">Primary Care:</label>
      <input
        type="text"
        id="doctorPrimaryCare"
        name="doctorPrimaryCare"
        value="<%= appointment.doctor?.PrimaryCare %>"
      /><br />

      <!-- Treatment Plan -->
      <h3>Treatment Plan:</h3>
      <label for="treatmentDiagnosis">Diagnosis:</label>
      <input
        type="text"
        id="treatmentDiagnosis"
        name="treatmentDiagnosis"
        value="<%= appointment.treatment_plan?.Diagnosis %>"
      /><br />

      <label for="treatmentPlan">Treatment:</label>
      <input
        type="text"
        id="treatmentPlan"
        name="treatmentPlan"
        value="<%= appointment.treatment_plan?.Treatment %>"
      /><br />

      <!-- Submit Button -->
      <input type="submit" value="Update Appointment" />
    </form>
  </body>
</html>
